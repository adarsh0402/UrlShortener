<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>URL Shortener</title>
    <!-- Bootstrap CSS -->
    <link
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Custom Styles -->
    <style>
      body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f9f9f9;
      }

      .container {
        margin-top: 50px;
      }

      .header {
        text-align: center;
        margin-bottom: 30px;
      }

      .header h1 {
        color: #007bff;
        font-weight: bold;
        font-size: 2.5rem;
      }

      .header p {
        font-size: 1.2rem;
        color: #6c757d;
      }

      .form-container {
        background: #ffffff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
        max-width: 600px;
        margin: 0 auto;
      }

      .form-container label {
        font-weight: bold;
        color: #333;
      }

      .form-container input {
        border-radius: 5px;
      }

      .table-container {
        margin-top: 30px;
        text-align: center;
      }

      table {
        background: #ffffff;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
      }

      th {
        background-color: #007bff;
        color: #fff;
      }

      tr:nth-child(even) {
        background-color: #f2f2f2;
      }

      .btn-generate {
        background-color: #28a745;
        color: #fff;
        font-weight: bold;
      }

      .btn-generate:hover {
        background-color: #218838;
      }

      .emoji {
        font-size: 1.5rem;
        margin-right: 8px;
      }

      footer {
        text-align: center;
        margin-top: 40px;
        color: #6c757d;
        font-size: 0.9rem;
      }
    </style>
  </head>
  <body>
    <!-- Header -->
    <div class="container header">
      <h1>‚ú® URL Shortener üöÄ</h1>
      <p>Shorten your long URLs instantly and manage them efficiently!</p>
    </div>

    <!-- Form Section -->
    <div class="container form-container">
      <form method="POST" action="/url">
        <div class="form-group">
          <label for="url">
            <span class="emoji">üîó</span> Enter Your Original URL
          </label>
          <input
            type="url"
            class="form-control"
            name="url"
            id="url"
            placeholder="https://example.com"
            required
          />
        </div>
        <button type="submit" class="btn btn-generate btn-block">
          ‚úÇÔ∏è Shorten URL
        </button>
      </form>

      <!-- URL Generated Message -->
      <% if (locals.id) { %>
      <div class="alert alert-success mt-4 text-center" role="alert">
        üéâ URL Generated:
        <strong>http://<%= host %>/url/<%= id %></strong>
      </div>
      <% } %>
    </div>

    <!-- URL Table Section -->
    <% if (locals.urls) { %>
    <div class="container table-container">
      <h3 class="my-4">üìã Your Shortened URLs</h3>
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>S. No</th>
              <th>Short ID</th>
              <th>Original URL</th>
              <th>Clicks</th>
            </tr>
          </thead>
          <tbody>
            <% urls.forEach((url, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td>
                <a href="/url/<%= url.shortId %>" target="_blank">
                  <%= url.shortId %> üîç
                </a>
              </td>
              <td><%= url.redirectURL %></td>
              <td><%= url.visitHistory.length %></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
    <% } %>

    <!-- Footer -->
    <footer>Made with ‚ù§Ô∏è by Adarsh | Shorten, Share, Succeed!</footer>

    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
