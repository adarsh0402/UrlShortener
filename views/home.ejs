<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>URL Shortener</title>
    <!-- Bootstrap CSS -->
    <link
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f9f9f9;
      }
      .container {
        margin-top: 50px;
      }
      .header {
        text-align: center;
        margin-bottom: 30px;
      }
      .logout-btn {
        position: absolute;
        top: 10px;
        right: 10px;
      }
      table {
        background: #ffffff;
      }
      th {
        background-color: #007bff;
        color: #fff;
      }
      tr:nth-child(even) {
        background-color: #f2f2f2;
      }
    </style>
  </head>
  <body>
    <!-- Logout Button -->
    <a href="/logout" class="btn btn-danger logout-btn">Logout</a>

    <!-- Header -->
    <div class="container header">
      <h1>âœ¨ URL Shortener ğŸš€</h1>
      <p>Shorten your long URLs instantly and manage them efficiently!</p>
    </div>

    <!-- Form Section -->
    <div class="container form-container">
      <form method="POST" action="/url">
        <div class="form-group">
          <label for="url">ğŸ”— Enter Your Original URL</label>
          <input
            type="url"
            class="form-control"
            name="url"
            id="url"
            placeholder="https://example.com"
            required
          />
        </div>
        <button type="submit" class="btn btn-success btn-block">
          âœ‚ï¸ Shorten URL
        </button>
      </form>

      <!-- URL Generated Message -->
      <% if (locals.id) { %>
      <div class="alert alert-success mt-4 text-center" role="alert">
        <h5 class="mb-2">ğŸ‰ URL Generated Successfully!</h5>
        <div class="d-flex justify-content-center align-items-center">
          <strong id="shortUrl" class="mr-2">
            <a href="http://<%= host %>/url/<%= id %>" target="_blank">
              http://<%= host %>/url/<%= id %>
            </a>
          </strong>
          <button
            class="btn btn-outline-primary btn-sm ml-2"
            onclick="copyToClipboard()"
          >
            ğŸ“‹ Copy
          </button>
          <a href="/" class="btn btn-outline-info btn-sm ml-2">ğŸ“œ Go to List</a>
        </div>
      </div>
      <% } %>

      <script>
        function copyToClipboard() {
          const urlText = document.getElementById("shortUrl").innerText;
          navigator.clipboard.writeText(urlText).then(() => {
            alert("Short URL copied to clipboard! âœ…");
          });
        }
      </script>
    </div>

    <!-- URL Table Section -->
    <% if (locals.urls) { %>
    <div class="container table-container">
      <h3 class="my-4">ğŸ“‹ Your Shortened URLs</h3>
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>S. No</th>
              <th>Short ID</th>
              <th>Original URL</th>
              <th>Clicks</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% urls.forEach((url, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td>
                <a href="/url/<%= url.shortId %>" target="_blank">
                  <%= url.shortId %> ğŸ”
                </a>
              </td>
              <td><%= url.redirectURL %></td>
              <td><%= url.visitHistory.length %></td>
              <td>
                <form
                  method="POST"
                  action="/url/delete/<%= url.shortId %>"
                  style="display: inline"
                >
                  <button type="submit" class="btn btn-danger btn-sm">
                    ğŸ—‘ Delete
                  </button>
                </form>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
    <% } %>

    <!-- Footer -->
    <footer class="text-center mt-4">
      Made with â¤ï¸ by Adarsh | Shorten, Share, Succeed!
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
